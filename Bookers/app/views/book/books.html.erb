<head>
<h1>Books</h1>
</head>

    <div class ="book-wrap">
    <%@books.each do |book|%>

<%if book.title!=nil&& book.body!=nil %>

    <div class="book-box">

    <div class="book-comment">

    <span class="book-title"><%=link_to book.title,books_path(book)%></span>
        <span class="book-body"><%=book.body%></span>

            <span class="show-item"><%=link_to"Show",books_path(book.id)%></span>
            <span calss="edit-item"><%=link_to"Edit",edit_books_path(book.id)%></span>
            <span class="destroy-item"><%=link_to"Destory",destroy_books_path(book.id),method: :delete%></span>

    </div>
</div>
<%end%>
    <%end%>

    <%= form_with model: @book, url:'/books/create', local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
</div>
