   <% if flash[:notice] %>
     <p class="s-text" id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
<h1>Books</h1>

<table>

  <tr>
    <th class="title1">Title</th>
    <th class="body1">Body</th>
    <th colspan="3"></th>
  </tr>

<%@books.each do |book|%>

<tr>
<td class="book-title"><%=book.title%></td>
<td class="book-body"><%=book.body%></td>
<td class="link-menu"><%=link_to "Show",book_path(book)%></td>
<td class="link-menu"><%=link_to "Edit",edit_book_path(book)%></td>
<td class="link-menu"><%=link_to "Destroy",book_path(book),method: :delete ,data: {confirm: "Are you sure?"}%></td>
</tr>

<%end%>
</table>



<h2>New book</h2>
<%=form_with model:@books,url:"books",local:true do |f|%>

<p>

<%= render 'layouts/error_messages', model: @book%>

</p>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<%end%>